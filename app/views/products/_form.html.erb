<%= render 'shared/errors', object: @product %>  

<div class ='row'>
    <div class = 'col-xs-12'>
        <%= form_for(@product, :html => {class: "form-horizontal", role: "form"}) do |f| %>
 	<div class="form-group">
                  <div class="control-label col-sm-2">
                      <%= f.label :product_name %>
                  </div>
                  <div class="col-sm-8">
                     <%= f.text_field :product_name, class: "form-control",  placeholder: "Product Name", autofocus: true  %>
                  </div>
              </div>

              <div class="form-group">
                  <div class="control-label col-sm-2">
                      <%= f.label :product_pic %>
                  </div>
                  <div class="col-sm-8">
                      <%= f.text_field :product_pic, class: "form-control",  placeholder: "Product Picture" %>
                 </div>
             </div>
		 
             <div class="form-group">
                 <div class="control-label col-sm-2">
                     <%= f.label :description %>
	   </div>
	   <div class="col-sm-8">
                     <%= f.text_area :description, class: "form-control",  placeholder: "Description"%>
                 </div>
             </div>
			 
             <div class="form-group">
                 <div class="control-label col-sm-2">
                     <%= f.label :colour %>
	   </div>
	   <div class="col-sm-8">
                     <%= f.text_field :colour, class: "form-control",  placeholder: "Colour"%>
                 </div>
             </div>
				 
             <div class="form-group">
                 <div class="control-label col-sm-2">
	       <%= f.label :size %>
	   </div>
	   <div class="col-sm-8">
                     <%= f.text_field :size,  class: "form-control",  placeholder: "Size"%>
                 </div>
             </div>
  
             <div class="form-group">
                 <div class="control-label col-sm-2">
                     <%= f.label :price %>
	   </div>
	   <div class="col-sm-8">
                     <%= f.number_field :price, class:  "form-control",  placeholder: "Price"%>
                 </div>
             </div>
			 
             <div class="form-group">
                 <div class="control-label col-sm-2">
                     <%= f.label :product_number %>
	   </div>
	   <div class="col-sm-8">
                     <%= f.text_field :product_number, class: "form-control",  placeholder: "Product Code"%>
                 </div>
             </div>

             <div class="form-group">
                 <div class="col-sm-offset-2 col-sm-2">
                     <%= f.submit class: 'btn btn-primary btn-lg'%>
  	   </div>
             </div>
         <% end %>