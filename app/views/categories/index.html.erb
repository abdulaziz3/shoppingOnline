<h1 align="center">Categories</h1></br>
<div align="center">
  <%= will_paginate %>
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well well_categories col-md-4 col-md-offset-4">
          <li class="product-title">
            <strong>
              <%= link_to "#{category.name}", category_path(category) %>
            </strong>
          </li></br>
          <li><small><%= pluralize(category.products.count, "product") %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
  </div>